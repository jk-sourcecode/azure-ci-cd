import groovy.json.JsonSlurper

node {

    def PACKAGE_VERSION = sh(returnStdout: true, script: /sed -nE 's\/^\s*"version": "(.*?)",$\/\1\/p' package.json/).trim()   
    def imageTag = "${env.devjwtapi_acr_path}/secure-api-jwt:version-${PACKAGE_VERSION}"
    stage('Pull') {
        echo 'Pulling source from GIT'
        checkout scm
    }

    stage('Build') {
        echo 'Building docker image'
        echo """version-${PACKAGE_VERSION}"""
        sh """docker build -t ${imageTag} ."""
    }
    
    stage('Publish') {
        sh "docker login -u ${devjwtapi_acr_user} -p ${devjwtapi_acr_password} ${env.devjwtapi_acr_path}"
        sh """docker push ${imageTag}"""
    }
}